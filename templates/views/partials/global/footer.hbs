        <div class="column location">
            <h3>Notre emplacement</h3>
            <div id="map"></div>
             <script>
               function initMap() {
                 var uluru = {lat: 5.3005438, lng: -3.9871997};
                 var map = new google.maps.Map(document.getElementById('map'), {
                   zoom: 8,
                   center: uluru
                 });
                 var marker = new google.maps.Marker({
                   position: uluru,
                   map: map
                 });
               }
             </script>
             <script async defer
             src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDFJXB2kSiaaeh6rzqsVcGGtmIgrZ9hCgc&callback=initMap">
             </script>
        </div>
