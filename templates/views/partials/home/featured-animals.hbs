<section class="section-featured">
  <div class="section-featured_wrapper padding">
    <div class="section-featured_text">
      <div class="headline">
        <img src="/images/h2-decoration.jpg" class="banner"/><h2>Featured Animals</h2><img src="/images/h2-decoration.jpg" class="banner"/>
      </div>
    </div>
    <div class="section-featured_content">
      {{#each featuredAnimals}}
        <div class="item">
          <div class="image" style="background: url('{{image.src}}') no-repeat center center; background-size:cover;"></div>
          <div class="context">
            <h4 class="headline">{{name}}</h4>
            <span class="description">{{description}}</span>
          </div>
        </div>
      {{/each}}
    </div>
    <button class="button" type="button">More Animals</button>
  </div>
</section>
